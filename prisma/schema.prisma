generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
  id            Int    @id @default(autoincrement())
  name          String
  points        Int    @default(0)
  messageAmount Int    @default(0)
  username      String?
  password      String?
  phone         String?
}

model lastMessageDate {
  id   Int      @id @default(autoincrement())
  date DateTime
}
